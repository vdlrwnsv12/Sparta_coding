int[] numbers = { 10, 20, 30, 40, 50 };
int max = numbers[0];
int min = numbers[0];

foreach (int number in numbers)
{
    if (number > max)
        max = number;

    if (number < min)
        min = number;
}

Console.WriteLine($"max: {max}");
Console.WriteLine($"min: {min}");
